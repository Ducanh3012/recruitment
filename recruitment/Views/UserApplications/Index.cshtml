@model IEnumerable<recruitment.Models.UserApplication>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobListing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobListing.JobListingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationStatus.ApplicationStatusId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserApplicationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserApplicationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserApplicationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
